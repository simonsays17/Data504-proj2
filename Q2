create or replace procedure show_customers(new_customers out customers%rowtype)
is
begin
  select * 
  into new_customers
  from customers;
end;
/

set serveroutput on
create or replace procedure show_employees(new_employees out employees%rowtype, status out boolean) 
is
begin
  select *
  into new_employees
  from employees;
  status:=true;
exception
  when no_data_found then status:=false;
end;
/
create or replace procedure show_products(new_products out products%rowtype)
is
begin
  select * 
  into new_products
  from products;
end;
/
create or replace procedure show_purchases(new_purchases out purchases%rowtype)
is
begin 
  select * 
  into new_purchases
  from purchases;
end;
/
create or replace procedure show_logs(new_logs out logs%rowtype) 
is
begin
  select * 
  into new_logs
  from logs;
end;
/

set serveroutput on
declare
v_employees employees%rowtype;
begin
  show_employees(v_employees);
  if(status) then 
    dbms_output.put_line(v_employees);
  else 
    dbms_output.put_line('No data');
  end if;
end;
/


create procedure show_customers is
  new_customers customers%rowtype;
begin
  select * into new_customers
  from customers;
end;

create procedure show_employees is
  new_employees employees%rowtype;
begin
  select * into new employees
  from employees;
end;

create procedure show_products is
  new_products products%rowtype;
begin
  select * into new_products
  from products;
end;

create procedure show_purchases is
  new_purchases purchases%rowtype;
begin 
  select * into new_purchases
  from purchases;
end;

create procedure show_logs is
  new_logs logs%rowtype;
begin
  select * into new_logs
  from logs;
end;

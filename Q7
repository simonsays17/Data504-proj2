#First trigger for inseriting new tuple in Customers
#gets error (PL/SQL: ORA-00917: missing comma) 
create or replace trigger add_cust_log 
after insert on Customers
for EACH ROW
BEGIN

 
	insert into logs
	Values(s_logs.nextval, user, 'INSERT', SYSDATE, 'Customers' , cid:new.cid);

	
END;
/

#trigger for when updating customer last visit
#error with cid I believe ( PL/SQL: ORA-02289: sequence does not exist)

create or replace trigger update_cust
after update of last_visit_date on customers 
for EACH ROW
BEGIN
insert into logs 
 Values(s_logs.nextval, user, 'UPDATE', SYSDATE, 'Customers' , :old.cid); 

	
END;
/

#trigger for updating customer Vists
